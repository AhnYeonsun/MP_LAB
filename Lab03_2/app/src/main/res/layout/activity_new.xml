<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ahn.lab03_2.NewActivity">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>
            <TextView android:text="성명"/>
            <TextView android:id="@+id/receiveName"/>
        </TableRow>

        <TableRow>
            <TextView android:text="성별"/>
            <TextView android:id="@+id/receiveType"/>
        </TableRow>

        <TableRow>
            <TextView android:text="수신여부"/>
            <TextView android:id="@+id/receiveSend"/>
        </TableRow>

    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBack"
        android:text="이전"
        android:layout_gravity="right"/>
</LinearLayout>
</android.support.constraint.ConstraintLayout>
